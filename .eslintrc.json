{
    "root": true,
    "extends": [
        "eslint:recommended",
        "plugin:jsdoc/recommended",
        "plugin:jest/recommended",
        "plugin:jest/style"
    ],
    "parserOptions": {
        "ecmaVersion": 2017
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "jsdoc",
        "jest"
    ],

    // TODO: Remove once rewrite of web interface is done
    "ignorePatterns": "src/inputs/web"
}